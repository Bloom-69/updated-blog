const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Bloom. All rights reserved.
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		color: var(--text);
		text-align: center;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin-top: 1em;
	}
	.social-links a {
		text-decoration: none;
		color: var(--texty);
	}
	.social-links a:hover {
		color: var(--accent-800);
	}
</style>
